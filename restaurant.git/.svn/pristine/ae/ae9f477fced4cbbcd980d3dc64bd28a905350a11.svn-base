.navbar{
    display: flex;
    align-items: center;
    padding: 0.8rem 0 0;
    justify-content: space-between;
    background-color: var(--while-color);
}

/* .nav.row{
    justify-content: space-between;
    align-items: center;
} */

.navbar__left img{
    height: 100%;
    width: auto;
}

.navbar__right-list{
    display: flex;
    justify-content: space-evenly;
    align-items: center;
    margin-right: 3rem;
}

.navbar__right-list-btn{
    position: relative;
}

.navbar__right-list-btn{
    display: block;
    font-weight: 600;
    padding: 1rem 2rem;
    border-radius: 3rem;
    color: var(--primary-color);
}